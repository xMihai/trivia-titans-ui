{
  "root": true,
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:import/recommended"],
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "immutable", "import"],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": "webpack"
  }
}
